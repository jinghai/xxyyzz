<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.ipet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.ipet.android.ui.common.SimpleTitleBar
        android:id="@+id/main_home_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/main_home_title"
        app:title_left_res_visibility="invisible"
        app:title_right_res_visibility="invisible" />

    <com.ipet.android.ui.common.FeedListView
        android:id="@+id/main_home_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:scrollbars="none"
        />

     <TextView
         android:id="@+id/empty"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:padding="15dip"
         android:text="@string/drop_to_more_load_label"
         android:textSize="22sp"
         android:visibility="gone" />
 
