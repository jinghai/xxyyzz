<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.ipet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SetUserNickNameActivity" >

    <com.ipet.android.ui.common.SimpleTitleBar
        android:id="@+id/me_set_info_nickname_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/me_set_info_nickname_title"
        app:title_left_res_visibility="visible"
        app:title_right_res_visibility="visible" 
        app:title_right_res_type="text"
        app:title_right_text="@string/btn_save" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/setting_list_single_bg_white"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="昵称"
                android:textColor="@color/font_black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/nickname_edit"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入昵称"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/font_black"
                android:textColorHint="@color/font_input_hint"
                android:textSize="16sp"
                android:windowSoftInputMode="stateHidden" />
        </LinearLayout>
     </LinearLayout>

</LinearLayout>
