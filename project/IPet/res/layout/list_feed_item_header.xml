<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="10dp" >

    <com.loopj.android.image.SmartImageView
        android:id="@+id/feed_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/list_default_avatar_boy" />

    <TextView
        android:id="@+id/feed_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:textColor="@color/font_subjet_gray"
        android:textSize="@dimen/text_size_12" />

    <ImageView
        android:id="@+id/stream_photo_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/feed_created_at"
        android:src="@drawable/stream_photo_timestamp" />

    <TextView
        android:id="@+id/feed_created_by"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_toLeftOf="@+id/stream_photo_timestamp"
        android:layout_toRightOf="@+id/feed_avatar"
        android:textColor="@color/feed_font_color"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

</RelativeLayout>