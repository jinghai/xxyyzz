<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ipet"
          android:versionCode="6"
          android:versionName="0.6" >

    <uses-sdk
        android:minSdkVersion="9" 
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" >
    </uses-permission>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.autofocus" />

    <application
        android:name="com.ipet.android.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/IPetBaseTheme" >
        <activity
            android:name="com.ipet.android.ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/IPetTheme.NoTitleBar.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ipet.android.ui.GuideActivity"
            android:label="@string/title_activity_guide"
            android:theme="@style/IPetTheme.NoTitleBar.FullScreen" >
        </activity>
        <activity
            android:name="com.ipet.android.ui.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/IPetTheme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.ipet.android.ui.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/IPetTheme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.ipet.android.ui.WelcomeRegisterOrLoginActivity"
            android:label="@string/title_activity_welcome_register_or_login"
            android:theme="@style/IPetTheme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.ipet.android.ui.SetUserInfoActivity"
            android:label="@string/title_activity_set_user_info"
            android:theme="@style/IPetTheme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.ipet.android.ui.SetUserNickNameActivity"
            android:label="@string/title_activity_set_user_nick_name"
            android:theme="@style/IPetTheme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.ipet.android.ui.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/IPetTheme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.ipet.android.ui.MainPopDialog"
            android:label="@string/title_activity_main_pop_dialog"
            android:theme="@style/MainPopDialog" >
        </activity>
        <activity
            android:name="com.ipet.android.ui.FeedbackActivity"
            android:label="@string/title_activity_feed_back"
            android:theme="@style/IPetTheme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.ipet.android.ui.PhotoViewActivity"
            android:label="@string/title_activity_photo_view"
            android:theme="@style/IPetTheme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.ipet.android.ui.PublishFeedActivity"
            android:label="@string/title_activity_publish_feed"
            android:theme="@style/IPetTheme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.ipet.android.ui.CommentActivity"
            android:label="@string/title_activity_comment"
            android:theme="@style/IPetTheme.NoTitleBar"  >
        </activity>
    </application>

</manifest>
